<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/parentId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#DDDDDD"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/exoNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exo name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/exoImageId"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_below="@+id/exoNameId"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/mainMuscleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Muscle"
            android:layout_below="@+id/exoImageId"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_margin="3dp"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>